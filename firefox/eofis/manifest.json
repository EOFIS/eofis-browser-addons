{
    "manifest_version": 2,
    "name": "EOFIS Noted",
    "version": "0.1",
    "description": "Adds an entry to save information in EOFIS in the right-click menu.",
    "icons": {
        "16": "icons/logo.svg",
        "32": "icons/logo.svg",
        "48": "icons/logo.svg",
        "96": "icons/logo.svg"
    },
    "permissions" : [
        "contextMenus",
        "activeTab",
        "nativeMessaging"
    ],
    "browser_action": {
        "default_icon": "icons/logo.svg",
        "default_title": "Send to EOFIS",
        "default_popup": "popup/popup.html",
		"browser_style": true
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "eofis@eofis.ie",
            "strict_min_version": "50.0"
        }
    }
}
